sudo apt-get install gcc
sudo apt-get install openmpi-bin openmpi-common libopenmpi-dev libgtk2.0-dev
sudo wget https://www.open-mpi.org/software/ompi/v4.1/downloads/openmpi-4.1.1.tar.gz
sudo tar  -xvzf /home/mpiuser/openmpi-4.1.1.tar.gz
cd /home/mpiuser/Desktop/openmpi-4.1.1sudo ./configure --prefix="/home/mpiuser/.openmpi"
sudo make
sudo make install